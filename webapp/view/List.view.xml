<mvc:View
    controllerName="project3.controller.List"
    xmlns="sap.m"
    xmlns:semantic="sap.f.semantic"
    xmlns:mvc="sap.ui.core.mvc">

    <semantic:SemanticPage
        id="listPage"
        preserveHeaderStateOnScroll="true"
        toggleHeaderOnTitleClick="false">
        <semantic:titleHeading>
            <Title
                id="listPageTitle"
                text="{listView>/title}"
                level="H2"/>
        </semantic:titleHeading>
        <semantic:content>
            <!-- For client side filtering add this to the items attribute: parameters: {operationMode: 'Client'}}" -->
            <List
                id="list"
                width="auto"
                class="sapFDynamicPageAlignContent"
                items="{
                    path: '/Projects',
                    sorter: {
                        path: 'ProjectId',
                        descending: false
                    },
                    groupHeaderFactory: '.createGroupHeader'
                }"
                busyIndicatorDelay="{listView>/delay}"
                noDataText="{listView>/noDataText}"
                mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished"
                selectionChange=".onSelectionChange">

                <headerToolbar>
                    <OverflowToolbar>
                        <SearchField
                            id="searchField"
                            showRefreshButton="true"
                            tooltip="{i18n>listSearchTooltip}"
                            search=".onSearch"
                            width="auto">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    minWidth="150px"
                                    maxWidth="240px"
                                    shrinkable="true"
                                    priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField>
                        <ToolbarSpacer/>

                            <Button
                            id="sortButton"
                            press="openSorterDialog"
                            icon="sap-icon://sort"
                            type="Transparent"/>
                        <Button
                            id="filterButton"
                            press="openFilterDialog"
                            icon="sap-icon://filter"
                            type="Transparent"/>


                    </OverflowToolbar>
                </headerToolbar>
                <items>
                    <ObjectListItem
                            title="{ProjectName}"
                            type="Active"
                            press="onSelectionChange"
                            showMarkers="true"
                            markFlagged="{TimelineLocked}"
                            markFavorite="{SimulationTimelineExist}"
                            markLocked="{TimelineLanguageChanged}">
                        <firstStatus>
                            <ObjectStatus
                                text="{ProjectStatusDscr}"
                                state="{
                                    path: 'Status',
                                    formatter: 'sap.m.sample.ObjectListItemMarkLocked.Formatter.status'
                                }" />
                        </firstStatus>
                        <ObjectAttribute text="{ProjectId}" />
                        <ObjectAttribute text="{ProjectType}" />
                        <ObjectAttribute text="{Account}" />
                    </ObjectListItem>
                </items>
            </List>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>